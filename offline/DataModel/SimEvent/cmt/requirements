package SimEvent

branches cmt src xml Event

use XmlObjDesc v* -no_auto_imports
use SniperKernel v*
use ROOT v* Externals
use BaseEvent v* DataModel
use EDMUtil v* DataModel

macro_append XODflags " -n LHAASO "
macro_append KM2ASimEvent_cintflags "-I$(CMTINSTALLAREA)/include"
macro_append KM2ASimHeader_cintflags "-I$(CMTINSTALLAREA)/include"
macro_append KM2ASimHit_cintflags "-I$(CMTINSTALLAREA)/include"

apply_pattern xod_headers files=../xml/*.xml
apply_pattern install_more_includes more=Event
apply_pattern cint_dictionary files=../Event/*.h

apply_pattern xod_srcs files=../Event/*.h

include_dirs $(SIMEVENTROOT)/Event

library SimEvent *.cc
apply_pattern linker_library library=SimEvent

