<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE xdd SYSTEM "xdd.dtd">

<xdd>
    <package name="SimEvent">

        <import name="TObject"/>

        <class name="KM2AHitParticle"
               author="LI Teng"
               desc="Secondary Particle information">

            <base name="TObject"/>

            <attribute name="idet"
                       type="int"
                       desc="detector id"
                       init="0"/>

            <attribute name="idp"
                       type="int"
                       desc="particle id"
                       init="0"/>

            <attribute name="ixp"
                       type="int"
                       desc=" detector id(x direction)"
                       init="0"/>

            <attribute name="iyp"
                       type="int"
                       desc=" detector id(y direction)"
                       init="0"/>

            <attribute name="ixm"
                       type="int"
                       desc="module id(x direction)"
                       init="0"/>

            <attribute name="iym"
                       type="int"
                       desc="module id(y direction)"
                       init="0"/>

            <attribute name="ptot"
                       type="float"
                       desc="particle energy"
                       init="0.0"/>

            <attribute name="npun"
                       type="int"
                       desc="number of punch-through particles"
                       init="0"/>

            <attribute name="xp"
                       type="float"
                       desc="hit position x (detector position x)"
                       init="0.0"/>

            <attribute name="yp"
                       type="float"
                       desc="hit position y (detector position y)"
                       init="0.0"/>

            <attribute name="zp"
                       type="float"
                       desc="hit position z (detector position z)"
                       init="4300"/>

            <attribute name="tp"
                       type="float"
                       desc="arrival time"
                       init="0.0"/>

       </class>
    </package>
</xdd>
